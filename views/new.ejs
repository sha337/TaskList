<%- include("partials/header") %>
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <h1 style="text-align: center;">Create new task!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/task" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newtask[title]" id="" placeholder="title">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="newtask[description]" id="" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newtask[priority]" id="" placeholder="Priority">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/task">Go Back!</a>
        </div>
        
        
    </div>
   
</div>
<%- include("partials/footer") %>